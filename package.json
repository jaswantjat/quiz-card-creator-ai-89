{
  "name": "iqube-fullstack",
  "version": "1.0.0",
  "description": "Full-stack iQube Quiz Card Creator - React Frontend + Express Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon server.js",
    "build": "vite build",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend build complete'",
    "start": "node --experimental-specifier-resolution=node server.js",
    "start:prod": "NODE_ENV=production node --experimental-specifier-resolution=node server.js",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "echo 'No tests specified'",
    "init-db": "node scripts/init-db.js",
    "verify": "node verify-deps.js",
    "verify-deployment": "node verify-deployment.js",
    "railway:build": "npm run build:frontend && npm run build:backend",
    "railway:start": "node --experimental-specifier-resolution=node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.1",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-hook-form": "^7.43.1",
    "@tanstack/react-query": "^4.28.0",
    "zod": "^3.20.6",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "tailwind-merge": "^1.10.0",
    "lucide-react": "^0.220.0",
    "@radix-ui/react-slot": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.3",
    "@radix-ui/react-dropdown-menu": "^2.0.4",
    "@radix-ui/react-label": "^2.0.1",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-separator": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.3",
    "sonner": "^1.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "vite": "^4.2.0",
    "typescript": "^4.9.3",
    "tailwindcss": "^3.2.7",
    "postcss": "^8.4.21",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^8.0.1"
  },
  "keywords": [
    "quiz",
    "questions",
    "ai",
    "azure",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT"
}
